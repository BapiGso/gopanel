<script>
    document.addEventListener('alpine:init', () => {
        Alpine.data('panel', () => ({
            data:(async function(){
                let response = await fetch(`/admin/docker?type=info`)
                if (response.ok){
                    return await response.json()
                }else{
                    alert(await response.text())
                    return []
                }
            })()
        }))
    })
</script>